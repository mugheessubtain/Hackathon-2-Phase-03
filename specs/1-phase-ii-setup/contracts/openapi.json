{
  "openapi": "3.0.0",
  "info": {
    "title": "Phase II Todo API",
    "version": "1.0.0"
  },
  "paths": {
    "/tasks": {
      "get": {
        "summary": "List user tasks",
        "responses": {
          "200": { "description": "Array of tasks" }
        }
      },
      "post": {
        "summary": "Create a new task",
        "responses": {
          "201": { "description": "Task created" }
        }
      }
    },
    "/tasks/{task_id}": {
      "patch": {
        "summary": "Update task status or content",
        "responses": {
          "200": { "description": "Task updated" }
        }
      },
      "delete": {
        "summary": "Delete a task",
        "responses": {
          "204": { "description": "Task deleted" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "JWT": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    { "JWT": [] }
  ]
}
